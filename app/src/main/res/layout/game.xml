<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/phon_game"
    android:id = "@+id/move"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentRight="true"
       android:text="0"
       android:textColor="@color/black95"
       android:layout_margin="10dp"
       android:id = "@+id/text_score"
       android:textSize="18dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/obstacleplus2"
        android:id="@+id/ObstaclePlus"
        android:layout_weight="2"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/electron2"
        android:id="@+id/electon"
        android:layout_weight="8"
         />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/obstacleminus"
        android:id = "@+id/ObstacleMinus"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/proton"
        android:id = "@+id/ObstacleProton"/>


</RelativeLayout>